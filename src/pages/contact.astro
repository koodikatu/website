---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Koodikatu | Contact">
  <main
    class="prose lg:prose-xl prose-ul:p-0 px-2 lg:px-0 lg:mt-8 w-full max-w-4xl mx-auto"
  >
    <section>
      <h2 class="sr-only">Messengers</h2>
      <ul class="not-prose list-none flex gap-4">
        <li>
          <a
            href="https://wa.me/message/NBLX23LB3XOZP1"
            target="_blank"
            class="flex gap-3 justify-center items-center py-2 px-8 bg-slate-200 rounded"
          >
            <img
              src="/whatsapp.svg"
              alt="Whatsapp logo"
              class="h-5 aspect-square"
            />
            WhatsApp
          </a>
        </li>
        <li>
          <a
            href="https://t.me/koodikatu"
            target="_blank"
            class="flex gap-3 justify-center items-center py-2 px-8 bg-slate-200 rounded"
          >
            <img
              src="/telegram.svg"
              alt="Telegram logo"
              class="h-5 aspect-square"
            />
            Telegram
          </a>
        </li>
      </ul>
    </section>
    <section>
      <h2 class="sr-only">Send an email</h2>
      <form
        name="contact"
        method="POST"
        action="/email-sent"
        data-netlify="true"
        class="flex flex-col"
      >
        <label for="email">Email</label>
        <input
          required
          type="email"
          name="email"
          id="email"
          class="w-full border border-slate-200 rounded p-2"
        />
        <label class="mt-4" for="message">Message</label>
        <textarea
          required
          name="message"
          id="message"
          class="w-full border border-slate-200 rounded p-2"
          placeholder="Type your message here"
          rows="5"></textarea>
        <button
          type="submit"
          class="font-semibold bg-slate-200 rounded py-2 px-8 mt-2 w-full lg:w-max"
        >
          Send
        </button>
      </form>
    </section>
  </main>
</Layout>
